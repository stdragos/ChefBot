{
  "mcpServer": {
    "name": "chefbot-recipe-server",
    "version": "1.0.0",
    "baseUrl": "http://localhost:8080"
  },
  "tools": {
    "searchRecipes": {
      "name": "searchRecipes",
      "description": "Search for recipes in the database based on ingredients or dish name. The query MUST be in ENGLISH.",
      "endpoint": "/mcp/tools/searchRecipes",
      "method": "GET",
      "parameters": {
        "query": {
          "type": "string",
          "required": true,
          "description": "The search query for finding recipes"
        }
      }
    },
    "sendEmail": {
      "name": "sendEmail",
      "description": "Send an email with recipe content to the user's email address using Resend MCP server via Docker.",
      "docker": {
        "image": "mcp/resend",
        "env": {
          "RESEND_API_KEY": "${resend.api.key}",
          "SENDER_EMAIL_ADDRESS": "${resend.sender.email}",
          "REPLY_TO_EMAIL_ADDRESSES": "${resend.reply.to.email}"
        }
      },
      "parameters": {
        "to": {
          "type": "string",
          "required": true,
          "description": "Recipient email address"
        },
        "subject": {
          "type": "string",
          "required": true,
          "description": "Email subject line"
        },
        "text": {
          "type": "string",
          "required": true,
          "description": "Plain text email content with the recipe"
        }
      }
    }
  }
}

